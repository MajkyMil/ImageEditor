<UserControl
    x:Class="TestUserControl.Views.UserControls.ItemUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestUserControl.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Label
            Width="20"
            Margin="3"
            Content="{Binding Id}" />
        <TextBox
            Width="40"
            Margin="3"
            Text="{Binding Name}" />
        <TextBlock
            Width="40"
            Margin="3"
            Text="{Binding Description}" />
        <TextBox
            Width="40"
            Margin="3"
            Text="{Binding Price}" />
        <Button
            Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:OrderUserControl}}, Path=DeleteItemCommand}"
            CommandParameter="{Binding Id}"
            Content="Delete" />
    </StackPanel>
</UserControl>
